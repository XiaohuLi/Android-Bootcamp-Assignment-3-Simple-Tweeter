<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="#ff5c85ff"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Billy"
        android:id="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toStartOf="@id/tvUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvBody"
        android:layout_below="@+id/tvUserName"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignRight="@+id/tvTime"
        android:layout_alignEnd="@+id/tvTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timestamp"
        android:id="@+id/tvTime"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="screen_name"
        android:id="@+id/tvScreenName"
        android:layout_toRightOf="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/tvUserName"
        android:layout_above="@+id/tvBody"
        android:gravity="bottom"
        android:paddingLeft="5dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/tvBody"
        android:src="@drawable/ic_reply"
        android:layout_marginLeft="60dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_retweet"
        android:layout_alignTop="@+id/tvRetweetCount"
        android:layout_toLeftOf="@+id/tvRetweetCount"
        android:layout_toStartOf="@+id/tvRetweetCount" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView4"
        android:src="@drawable/ic_fav"
        android:layout_below="@+id/tvBody"
        android:layout_toLeftOf="@+id/tvFavCount"
        android:layout_toStartOf="@+id/tvFavCount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="retweet_count"
        android:id="@+id/tvRetweetCount"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fav_count"
        android:id="@+id/tvFavCount"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout><!-- From: file:/Users/xiaohu/Android-Bootcamp-Assignment-3-Simple-Tweeter/app/src/main/res/layout/item_tweet.xml -->